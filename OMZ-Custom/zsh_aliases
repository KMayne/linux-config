function permalias () {
  alias "$*"
  echo alias "$*" >> $ZSH_CUSTOM/zsh_aliases
}

alias virc='vi ~/.zshrc && source ~/.zshrc'

# Git aliases
alias ghr='git reset --hard'
alias gundo='git reset HEAD~'
alias grvt='git revert'

# Other
alias pubkey='less ~/.ssh/id_rsa.pub'
alias cdpp='cd ~/Repos/paperless'
alias cdppa='cd ~/Repos/paperless/api'
alias cdppw='cd ~/Repos/paperless/web'
alias vialias='vi $ZSH_CUSTOM/zsh_aliases && source $ZSH_CUSTOM/zsh_aliases'
alias cdconfig='cd $CONFIG'
